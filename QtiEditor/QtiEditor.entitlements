<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow user to select files for reading and writing -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- Disable App Sandbox for development/personal use -->
	<!-- This allows the app to access files without strict sandboxing -->
	<key>com.apple.security.app-sandbox</key>
	<false/>

	<!-- Allow outgoing network connections (if needed for future features) -->
	<key>com.apple.security.network.client</key>
	<true/>
</dict>
</plist>
